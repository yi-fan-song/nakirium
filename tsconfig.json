{
	"compilerOptions": {
		"lib": ["ES6", "DOM"],
		"module": "commonjs",
		"target": "ES6",
		"strictFunctionTypes": true,
		"sourceMap": true,
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "build"
	},
	"include": ["src/*"],
	"exclude": ["node_modules"]
}
